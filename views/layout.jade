doctype html

html
  head
    - if (title)
      title= __(title)
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='shortcut icon', href='/images/favicon.ico', type='image/x-icon')
    link(rel='icon', href='/images/favicon.ico', type='image/x=icon')

    script(src='/javascript/fallback.min.js')

    script.
      fallback.load({
        //page_css: '/stylesheets/style.css',

        bootstrap_css: [
          '//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css',
          'http://ajax.aspnetcdn.com/ajax/bootstrap/3.2.0/css/bootstrap.min.css',
          '/stylesheets/bootstrap.min.css'
        ],

        jQueryUI_css: [
          '//ajax.googleapis.com/ajax/libs/jqueryui/1.11.0/themes/smoothness/jquery-ui.css',
          '/stylesheets/jquery-ui.min.css'
        ],

        jQuery: [
          '//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js',
          'http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.11.1.min.js',
          '/javascript/jquery-1.11.1.min.js'
        ],

        'jQuery.ui': [
          '//ajax.googleapis.com/ajax/libs/jqueryui/1.11.0/jquery-ui.min.js',
          '/javascript/jquery-ui.min.js'
        ],

        '$.fn.modal': [
          '//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js',
          'http://ajax.aspnetcdn.com/ajax/bootstrap/3.2.0/bootstrap.min.js',
          '/javascript/bootstrap.min.js'
        ],

        angular: [
          'https://ajax.googleapis.com/ajax/libs/angularjs/1.2.20/angular.min.js',
          '/javascript/angular.min.js'
        ]

      }, {

        shim: {
          'jQuery.ui': ['jQuery'],
          '$.fn.modal': ['jQuery']
        }

      });

    block head

  body

    div.jumbotron
      div.container
        img(src='/images/logo1.png', style='fload: left; width: 41%; max-width: 400px;')
        div(style='float: right; text-align: right;')
          p #{__('Sevilla, Valle')}
          p #{__('Colombia')}
  
    div.container
      nav.navbar.navbar-inverse(role='navigation')
        div.container-fluid
          div.navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-collapse')
              span.sr-only
                Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/') #{__('Home')}

          div.collapse.navbar-collapse#navbar-collapse
            ul.nav.navbar-nav
              li
                a(href='/about')
                  |#{__('¿Quiénes Somos?')}
              li.dropdown
                a.dropdown-toggle(href='/activities', data-toggle='dropdown')
                  |#{__('Nuestras Actividades')}
                  span.caret
                ul.dropdown-menu(role='menu')
                  li
                    a(href='/activities') #{__('Actividades')}
                  li
                    a(href='/signup') #{__('Inscríbete')}
                  li
                    a(href='/calendar') #{__('Calendario')}
              li
                a(href='/sponsor')
                  |#{__('Apoye Un Niño')}
              li
                a(href='/contact')
                  |#{__('Contáctenos')}
      
    block content