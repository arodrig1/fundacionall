extends layout

block head

  script.
      fallback.load({
        manager: '/javascript/activityManager.js'
      }, {

          shim: {
            manager: ['angular']
          }

      });

block content

  html(ng-app='activityManager')

    body(ng-controller='mainController')
      div.container

        div.row#todo-list
          div.col-sm-4.col-sm-offset-4
            div.checkbox(ng-repeat='activity in activities')
              label
                input(type='checkbox', ng-click='deleteActivity(activity._id)')
                | {{activity.name}}

        div.row#activity-form
          div.col-sm-8.col-sm-offset-2(text-center)
            form
              div.form-group
                input.form-control.input-lg.text-center(placeholder='Pintura', ng-model='formData.name')

              button.btn.btn-primary.btn-lg(type='submit', ng-click='createActivity()')
                | Add